@model System.Collections.Generic.List<MvcAuth.Models.Team>

@{
    ViewBag.Title = "Teams";
    Layout = "_Layout";
}

<h2>Teams</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Team Names</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <ul class="list-group">
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        <td>@item.TeamName</td>
                        <span class="badge bg-primary rounded-pill">14</span>
                      </li>
                    </ul>
                    <td>
                        
                        <a asp-action="Edit" asp-controller="Team" class="btn btn-outline-warning" asp-route-id="@item.TeamID">Edit</a>
                        <a asp-action="Delete" asp-controller="Team" class="btn btn-outline-danger" asp-route-id="@item.TeamID">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Create" asp-controller="Team" class="btn btn-outline-primary">Create New Team</a>
        </div>
    </div>
</div>